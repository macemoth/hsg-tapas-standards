{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "id": "task+json",
  "properties": {
    "taskId": {
      "type": "string"
    },
    "taskName": {
      "type": "string"
    },
    "taskType": {
      "type": "string"
    },
    "taskStatus": {
      "type": "string"
    },
    "originalTaskUri": {
      "type": "string"
    },
    "serviceProvider": {
      "type": "string"
    },
    "inputData": {
      "type": "string",
      "description": "Only applicable for the calculation task type: <operand1><+-*><operand2>"
    },
    "outputData": {
      "type": "string",
      "description": "Only applicable for the calculation task type: <result of the calculation>"
    }

  },
  "required": [
    "taskId",
    "taskName",
    "taskType",
    "taskStatus",
    "originalTaskUri",
    "serviceProvider",
    "inputData"
  ]
}